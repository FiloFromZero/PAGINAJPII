---
// src/components/WhatsAppButton.astro

// Define las props que el componente puede recibir.
// 'phoneNumber' es el número de WhatsApp al que se redirigirá (solo números, sin '+', espacios o guiones).
// 'message' (opcional) es un mensaje predefinido que aparecerá en el campo de texto del chat de WhatsApp.
interface Props {
  phoneNumber: string; // Ej: "573001234567" (código de país + número)
  message?: string;
  ariaLabel?: string; // Para accesibilidad
}

const { 
    phoneNumber, 
    message = "Hola, me gustaría obtener más información.", // Mensaje por defecto si no se provee uno
    ariaLabel = "Contactar por WhatsApp" 
} = Astro.props;

// Construye la URL de WhatsApp
// El mensaje debe estar codificado para URL
const encodedMessage = encodeURIComponent(message);
const whatsappLink = `https://wa.me/${phoneNumber}?text=${encodedMessage}`;

---

<div id="whatsapp-float-button-wrapper" title={ariaLabel}>
  <a
    href={whatsappLink}
    target="_blank"
    rel="noopener noreferrer"
    id="whatsapp-float-button"
    aria-label={ariaLabel}
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="32"
      height="32"
      viewBox="0 0 24 24"
      fill="currentColor"
    >
      <path
        d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01s-.521.074-.792.372c-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"
      ></path>
    </svg>
  </a>
</div>

<style>
  #whatsapp-float-button-wrapper {
    position: fixed; /* ¡Esta línea es la clave para que 'bottom' y 'right' funcionen! */
    bottom: 30px;
    right: 30px;
    z-index: 1000; /* Asegura que esté sobre la mayoría de los elementos, pero debajo del chatbot (si su z-index es mayor) */
  }

  #whatsapp-float-button {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background-color: #25D366; /* Color oficial de WhatsApp */
    color: white;
    border: none;
    cursor: pointer;
    box-shadow: 0 8px 24px rgba(37, 211, 102, 0.4);
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    animation: float 3s ease-in-out infinite;
    text-decoration: none; /* Quita el subrayado del enlace */
  }

  #whatsapp-float-button:hover {
    transform: scale(1.1);
    box-shadow: 0 12px 32px rgba(37, 211, 102, 0.5);
    background-color: #1DAE54; /* Un tono más oscuro al pasar el mouse */
  }

  #whatsapp-float-button svg {
    width: 32px; /* Ajusta el tamaño del icono SVG si es necesario */
    height: 32px;
    fill: white; /* Color del icono SVG */
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-8px);
    }
  }
</style>


