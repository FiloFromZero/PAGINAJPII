---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import { Icon } from 'astro-icon/components';
import WhatsAppButton from '~/components/WhatsAppButton.astro';
const metadata = {
  title: 'Admisiones',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="2026" title="Admisiones" />

  <!-- Custom Table -->
  <div
    class="flex flex-col backdrop-blur bg-white border dark:bg-slate-900 rounded-lg border-gray-200 dark:border-gray-700 lg:p-8 max-w-[80vw] mx-auto p-4 shadow sm:p-6 w-full mb-8"
  >
    <div class="flex flex-col gap-8">
      <div>
        <h2 class="text-2xl font-bold mb-4 text-center">Prospecto Institucional 2026</h2>
        <div style="position: relative; width: 100%; padding-bottom: 141.4%; /* A4 Aspect Ratio */">
          <iframe
            src="./public/files/PROSPECTO_INSTITUCIONAL_2026.pdf#toolbar=0&navpanes=0"
            style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;"
            loading="lazy"
            class="border rounded-lg"></iframe>
        </div>
        <div class="flex justify-center mt-4">
          <a
            href="~/public/files/PROSPECTO_INSTITUCIONAL_2026.pdf"
            download="PROSPECTO_INSTITUCIONAL_2026.pdf"
            class="flex items-center gap-2 px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600"
          >
            <Icon name="tabler:download" class="w-6 h-6" />
            Descargar PDF
          </a>
        </div>
      </div>
      <div class="flex flex-row gap-4 items-center justify-center">
        <Icon name={'flat-color-icons:graduation-cap'} class="w-10 h-10" />
        <a
          href="https://www.iejuanpabloii.notas.zigmadatos.org/index.php/admisiones-2024"
          title="PROGRAMA DE NOTAS"
          class="text-blue-500 hover:underline">FORMULARIO PARA ESTUDIANTES NUEVOS (ZIGMA)</a
        >
      </div>
    </div>
  </div>
  <WhatsAppButton phoneNumber="573196721410" message="Hola, estoy interesado en sus servicios." />
</Layout>
