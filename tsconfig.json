{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "moduleResolution": "bundler"
  },
  "include": [
    "src/**/*",
    "astro.config.ts"
  ],
  "exclude": [
    "node_modules",
    "src/navigation.js",
    "src/utils/frontmatter.mjs"
  ]
}
